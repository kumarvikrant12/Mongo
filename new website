  <script>
    function filterSkills(category) {
      const skills = document.querySelectorAll('.skill');
      skills.forEach(skill => {
        if (category === 'all' || skill.dataset.category === category) {
          skill.style.display = 'flex';
        } else {
          skill.style.display = 'none';
        }
      });
    }
  </script>
